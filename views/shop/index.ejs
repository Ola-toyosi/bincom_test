<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/polling_unit.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (pollUnits.length > 0) { %>
            <div class="grid">
                <% for (let pollResults of pollUnits) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= pollResults.party_score %></h1>
                        </header>
                        <!-- <div class="card__image">
                            <img src="<%= pollResults.imageUrl %>"
                                alt="<%= pollResults.title %>">
                        </div> -->
                        <div class="card__content">
                            <h2 class="product__price">Score: <%= pollResults.party_score %></h2>
                            <p class="product__description"><%= pollResults.party_abbreviation %></p>
                        </div>
                        <div class="card__actions">
                                <a href="/polls/<%= pollResults.polling_unit_uniqueid %>" class="btn">Details</a>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
    
<%- include('../includes/end.ejs') %>